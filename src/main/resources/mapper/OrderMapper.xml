<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xi.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xi.domain.Order">
        <id column="order_id" property="orderId" />
        <result column="order_serial_id" property="orderSerialId" />
        <result column="total_count" property="totalCount" />
        <result column="total_value" property="totalValue" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id, order_serial_id, total_count, total_value, create_time, update_time
    </sql>

</mapper>
